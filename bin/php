#!/bin/bash

PHP_IMAGE_NAME=chatbot-php
CHAIN_CONTAINED_IN_PHP_CONTAINER_NAME=$PHP_IMAGE_NAME
USER_ID=$(id -u)
GROUP_ID=$(id -g)

container_name=$(docker ps --filter "ancestor=$CHAIN_CONTAINED_IN_PHP_CONTAINER_NAME" --format "{{.Names}}" | head -n 1)

if [ -n "$container_name" ]; then
docker exec \
    -ti \
    -e APP_ENV=test \
    "$container_name" php $@
else
## execution de PHP de mani√®re autonome (pas besoin d'un environnement de containers)
docker run \
    --init \
    --rm \
    -ti \
    --name "$PHP_IMAGE_NAME-running-script" \
    -v "$PWD":"$PWD" \
    --user "$USER_ID:$GROUP_ID" \
    -w "$PWD" \
    $PHP_IMAGE_NAME php $@
fi

