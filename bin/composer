#!/bin/bash
echo ${COMPOSER_HOME:-$HOME/.composer}
if [ -t 0 ] ; then
    moinsit='-it'
else
    moinsit=''
fi

USER_ID=$(id -u)
GROUP_ID=$(id -g)

docker run ${moinsit} --rm \
  --volume $PWD:/app \
  --user $USER_ID:$GROUP_ID \
  --name composer-running-script \
  -v "$PWD":/usr/src \
  composer:2.6.6 composer $@
